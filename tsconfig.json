{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "es6",
    "target": "es2015",
    "allowJs": true,
    "outDir": "out",
    "module": "commonjs",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "rootDir": "code"
  },
  "include": ["code/**/*"],
}
